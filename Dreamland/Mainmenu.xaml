<Window x:Class="Dreamland.Mainmenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dreamland"
        mc:Ignorable="d"
        Title="Меню просмотра" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#ff009fda" RenderTransformOrigin="0.49,0.457">
            <Image Source="/Resources/logo.png"/>
            <Button Content="Мастера" Margin="20"  Click="ShowMasters" Grid.Row="2" Height="30"/>
            <Button Content="Клиенты" Margin="20" Click="ShowClient" Grid.Row="1" Height="30"/>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

        </Grid>
        <StackPanel/>
        <Frame Grid.Column="1" x:Name="myFrame" NavigationUIVisibility="Hidden"/>
       
    </Grid>


</Window>
